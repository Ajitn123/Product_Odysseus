 public static boolean implicitwait(long time)
 {
     try {
	               driver.manage().timeouts().implicitlyWait(time, TimeUnit.SECONDS);
                   System.out.println("Waited for"+time+"sec implicitly.");
	
         } catch (Exception e) 
           {
     	         System.out.println(e.getMessage());
           }
                  return true;
 } 

